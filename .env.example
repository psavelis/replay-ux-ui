# Environment Variables for LeetGaming PRO Frontend (Next.js)

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
LEET_GAMING_PRO_URL=http://localhost:3000

# Backend API
REPLAY_API_URL=http://localhost:30800
NEXT_PUBLIC_REPLAY_API_URL=http://localhost:30800

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_must_match_backend

# Steam OAuth
STEAM_SECRET=your_steam_secret_here
STEAM_API_KEY=your_steam_api_key_here
STEAM_CALLBACK_URL=http://localhost:3000/api/auth/callback/steam

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Steam Verification
STEAM_VHASH_SOURCE=your_steam_vhash_salt_here_must_match_backend

# Blockchain Configuration (Client-Side)
NEXT_PUBLIC_EVM_CHAIN_ID=80001
NEXT_PUBLIC_EVM_NETWORK_NAME=Polygon Mumbai
NEXT_PUBLIC_EVM_RPC_URL=https://rpc-mumbai.maticvigil.com
NEXT_PUBLIC_EVM_EXPLORER_URL=https://mumbai.polygonscan.com

# USDC/USDT Contract Addresses
NEXT_PUBLIC_USDC_CONTRACT=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
NEXT_PUBLIC_USDT_CONTRACT=0xc2132D05D31c914a87C6611C10748AEb04B58e8F

# WalletConnect (optional)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Feature Flags
NEXT_PUBLIC_ENABLE_PRIZE_POOLS=true
NEXT_PUBLIC_ENABLE_AI_MATCHMAKING=true
NEXT_PUBLIC_ENABLE_WALLET=true
NEXT_PUBLIC_ENABLE_TOURNAMENTS=true

# Prize Pool Display
NEXT_PUBLIC_PLATFORM_CONTRIBUTION=0.50
NEXT_PUBLIC_CURRENCY_SYMBOL=$
NEXT_PUBLIC_DEFAULT_CURRENCY=USD

# Matchmaking Tiers
NEXT_PUBLIC_TIER_FREE_ENTRY_FEE=0.00
NEXT_PUBLIC_TIER_PREMIUM_ENTRY_FEE=1.00
NEXT_PUBLIC_TIER_PRO_ENTRY_FEE=2.00
NEXT_PUBLIC_TIER_ELITE_ENTRY_FEE=5.00

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_POOL_REFRESH_INTERVAL=5000  # milliseconds
NEXT_PUBLIC_WALLET_REFRESH_INTERVAL=10000

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Sentry Error Tracking (optional)
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Development
NODE_ENV=development

# Build Configuration
ANALYZE=false
NEXT_TELEMETRY_DISABLED=1
