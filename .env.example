# ===========================================
# LEETGAMING.PRO - Environment Configuration
# ===========================================
#
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local
#
# For detailed setup instructions, see: /docs/SETUP.md
# Or run the interactive setup: npx ts-node scripts/setup-env.ts
#

# ============================================
# Application URLs
# ============================================

# Public app URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3030
LEET_GAMING_PRO_URL=http://localhost:3030

# ============================================
# Backend API (replay-api)
# ============================================

# Backend API URL
# Development: http://localhost:8080 or http://localhost:30800
# Production: https://api.leetgaming.pro
REPLAY_API_URL=http://localhost:30800
NEXT_PUBLIC_REPLAY_API_URL=http://localhost:30800

# Region for matchmaking routing
# Options: local, na-east, na-west, eu-west, eu-east, sa, asia, oce
REPLAY_API_REGION=local

# Regional API URLs (optional - for multi-region deployment)
# REPLAY_API_URL_NA_EAST=https://api-na-east.leetgaming.pro
# REPLAY_API_URL_NA_WEST=https://api-na-west.leetgaming.pro
# REPLAY_API_URL_EU_WEST=https://api-eu-west.leetgaming.pro
# REPLAY_API_URL_EU_EAST=https://api-eu-east.leetgaming.pro
# REPLAY_API_URL_SA=https://api-sa.leetgaming.pro
# REPLAY_API_URL_ASIA=https://api-asia.leetgaming.pro
# REPLAY_API_URL_OCE=https://api-oce.leetgaming.pro

# ============================================
# Authentication (NextAuth.js)
# ============================================

# REQUIRED: Your app URL (no trailing slash)
NEXTAUTH_URL=http://localhost:3030

# REQUIRED: Random secret for JWT encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_must_match_backend

# ============================================
# Steam OAuth
# ============================================
# Get your API key from: https://steamcommunity.com/dev/apikey

# REQUIRED: Steam API key
STEAM_SECRET=your_steam_secret_here
STEAM_API_KEY=your_steam_api_key_here

# Steam callback URL
STEAM_CALLBACK_URL=http://localhost:3030/api/auth/callback/steam

# REQUIRED: Domain for Steam verification hash (must match backend)
STEAM_VHASH_SOURCE=your_steam_vhash_salt_here_must_match_backend

# ============================================
# Google OAuth
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
#
# Authorized redirect URI (add in Google Console):
#   Development: http://localhost:3030/api/auth/callback/google
#   Production: https://leetgaming.pro/api/auth/callback/google

# REQUIRED: Google OAuth client ID
GOOGLE_CLIENT_ID=your_google_client_id_here

# REQUIRED: Google OAuth client secret
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# Stripe Payments
# ============================================
# Get API keys from: https://dashboard.stripe.com/test/apikeys
# Use test keys (pk_test_, sk_test_) for development
# Use live keys (pk_live_, sk_live_) for production

# REQUIRED: Stripe publishable key (client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# REQUIRED: Stripe secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# REQUIRED: Stripe webhook signing secret
# Set up webhook at: https://dashboard.stripe.com/test/webhooks
# Endpoint: https://your-domain.com/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Stripe Price IDs (create in Stripe Dashboard > Products)
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_your_pro_price_id
NEXT_PUBLIC_STRIPE_TEAM_PRICE_ID=price_your_team_price_id

# ============================================
# PayPal Payments (Optional)
# ============================================
# Get credentials from: https://developer.paypal.com/dashboard/applications

# PayPal app client ID
PAYPAL_CLIENT_ID=

# PayPal app secret
PAYPAL_CLIENT_SECRET=

# PayPal webhook ID
PAYPAL_WEBHOOK_ID=

# ============================================
# Blockchain / Crypto Configuration
# ============================================
# For accepting USDC/USDT payments on EVM chains

# Chain ID (80001 = Mumbai Testnet, 137 = Polygon Mainnet)
NEXT_PUBLIC_EVM_CHAIN_ID=80001
NEXT_PUBLIC_EVM_NETWORK_NAME=Polygon Mumbai

# RPC URL for the chain
NEXT_PUBLIC_EVM_RPC_URL=https://rpc-mumbai.maticvigil.com

# Block explorer URL
NEXT_PUBLIC_EVM_EXPLORER_URL=https://mumbai.polygonscan.com

# USDC contract address
NEXT_PUBLIC_USDC_CONTRACT=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# USDT contract address
NEXT_PUBLIC_USDT_CONTRACT=0xc2132D05D31c914a87C6611C10748AEb04B58e8F

# WalletConnect project ID (get from: https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ============================================
# Feature Flags
# ============================================

# Core features
NEXT_PUBLIC_ENABLE_WALLET=true
NEXT_PUBLIC_ENABLE_PRIZE_POOLS=true
NEXT_PUBLIC_ENABLE_TOURNAMENTS=true
NEXT_PUBLIC_ENABLE_AI_MATCHMAKING=true

# Payment providers
NEXT_PUBLIC_ENABLE_CRYPTO=false
NEXT_PUBLIC_ENABLE_PAYPAL=false

# ============================================
# Prize Pool & Currency Configuration
# ============================================

# Platform contribution per match
NEXT_PUBLIC_PLATFORM_CONTRIBUTION=0.50

# Currency settings
NEXT_PUBLIC_CURRENCY_SYMBOL=$
NEXT_PUBLIC_DEFAULT_CURRENCY=USD

# Matchmaking entry fees by tier
NEXT_PUBLIC_TIER_FREE_ENTRY_FEE=0.00
NEXT_PUBLIC_TIER_PREMIUM_ENTRY_FEE=1.00
NEXT_PUBLIC_TIER_PRO_ENTRY_FEE=2.00
NEXT_PUBLIC_TIER_ELITE_ENTRY_FEE=5.00

# ============================================
# UI Configuration
# ============================================

# Default theme (dark/light/system)
NEXT_PUBLIC_DEFAULT_THEME=dark

# Enable animations
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Data refresh intervals (milliseconds)
NEXT_PUBLIC_POOL_REFRESH_INTERVAL=5000
NEXT_PUBLIC_WALLET_REFRESH_INTERVAL=10000

# ============================================
# Analytics & Monitoring (Optional)
# ============================================

# Google Analytics measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# ============================================
# CMS - Strapi (Optional)
# ============================================
# For dynamic content management

# Strapi API URL
STRAPI_URL=http://localhost:1337

# Strapi API token (create in Strapi Admin > Settings > API Tokens)
STRAPI_API_TOKEN=

# ============================================
# Development & Build
# ============================================

# Environment mode
NODE_ENV=development

# Enable bundle analyzer
ANALYZE=false

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Log level: debug, info, warn, error
LOG_LEVEL=info
